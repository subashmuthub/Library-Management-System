# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=smart_library

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h

# System Mode Configuration
# Set to 'true' for handheld reader demo mode
# Set to 'false' for fixed reader production mode
DEMO_MODE=true

# GPS Entry Configuration
GPS_PROXIMITY_THRESHOLD=50
LIBRARY_WIFI_SSID=LibraryWiFi
MOTION_SPEED_THRESHOLD=5
ENTRY_CONFIDENCE_AUTO_THRESHOLD=80
ENTRY_CONFIDENCE_MANUAL_THRESHOLD=50

# Library Geolocation (example coordinates)
LIBRARY_LATITUDE=37.7749
LIBRARY_LONGITUDE=-122.4194

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# RFID Configuration (for future hardware integration)
RFID_READER_TYPE=demo
RFID_READER_PORT=COM3

# BLE Beacon Configuration
BEACON_SCAN_INTERVAL=5000
BEACON_SIGNAL_THRESHOLD=-70
